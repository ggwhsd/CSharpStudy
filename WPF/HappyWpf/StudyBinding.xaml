<Window x:Class="HappyWpf.StudyBinding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HappyWpf"
        mc:Ignorable="d"
        Title="StudyBinding" Height="450" Width="800">
    <Grid>
        <TextBox Name="personNameTextBox" Text="{Binding Path=Name}" Width="100" Height="100" Background="SkyBlue" TextChanged="PersonNameTextBox_TextChanged"/>
    </Grid>
</Window>
