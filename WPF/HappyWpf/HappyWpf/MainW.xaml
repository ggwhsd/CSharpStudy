                <Button Content="Slider示例" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="142" Click="Button_Click_2" Height="23"/>
                <Button Content="UserControl使用" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="142" Click="Button_Click_3"/>
                <Button x:Name="btn_DockPanel" Content="Dockpanel容器" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="142" Click="btn_DockPanel_Click"/>
                <Button x:Name="btn_Canvas" Content="Canvas容器" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="142" Click="btn_Canvas_Click"/>
                <Button x:Name="btn_Grid"   Content="Grid容器" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="142" Click="btn_Grid_Click"/>
                <Button x:Name="btn_StackPanel"  Content="StackPanel容器" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="142" Click="btn_StackPanel_Click"/>
                <Button x:Name="btn_wrapPanel" Content="WrapPanel" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="142" Click="Button_Click_4"/>
                <Button Content="数据绑定简单示例" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="142" Click="Button_Click_5"/>
                <Button Content="二维形状库" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="142" Click="Button_Click_6"/>
                <Button x:Name="btn_image" Content="Image" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="142" Click="Btn_image_Click"/>
                <Button Content="3D" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="142" Click="Button_Click_7"/>
                <Button Content="动画" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="142" Click="Button_Click_8"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="逐个控件使用" HorizontalAlignment="Left" Height="378" Margin="172,10,0,0" VerticalAlignment="Top" Width="211">
            <StackPanel HorizontalAlignment="Left"   VerticalAlignment="Top" Height="378" Width="211">
                <Button Content="groupBox TabItem"/>
                <Button Content="Button"/>
                <Button Content="Button"/>
                <Button Content="Button"/>
                <Button Content="Button"/>
                <Button Content="Button"/>
                <Button Content="Button"/>
